<div class="eligibility-cell">
  <div class="container show-container">
    <div class="panel panel-primary col-sm-12">
      <div class="panel-head">
        <h3 class="text-warning eligibility-name">
          <span class="glyphicon glyphicon glyphicon-tag"></span> <%= link_to(eligibility.eligibility, eligibility_path(eligibility))%>
        </h3>
      </div>
      <div class="panel-body">
        <p class="eligibility-description">
          <span class="glyphicon glyphicon glyphicon-info-sign"></span>
          <%= eligibility.description%>
        </p>
        <%= link_to('Edit this Eligibility', edit_eligibility_path(eligibility.id), :class => 'btn btn-primary') %>
        <%= link_to('Delete this Eligibility', eligibility, method: :delete,
                    data: {confirm: 'Are you sure you want to delete this eligibility?'}, :class => 'btn btn-primary') %>
      </div>
    </div>
  </div>
</div>
