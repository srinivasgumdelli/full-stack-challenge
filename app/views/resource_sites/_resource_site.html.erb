<div id="main" class="col-sm-9 col-md-10 main pull-right">
  <div class="panel panel-default col-sm-12">
    <div class="panel-head">

      <h3 class="text-warning"><span class="glyphicon glyphicon glyphicon-pushpin"></span> <%= resource_site.name %></h3>
    </div>
    <div class="panel-body">
      <p>
        <b>Address: </b>
        <%= resource_site.address %>
      </p>
      <p>
        <b>Details: </b>
        <%= resource_site.description%>
      </p>
      <p class="inline">
        <b>Eligibilty:</b>
      <span class="label label-default">
        <%= Eligibility.find(resource_site.eligibility_id).eligibility %>
      </span>
      </p>
    </div>
  </div>
</div>
