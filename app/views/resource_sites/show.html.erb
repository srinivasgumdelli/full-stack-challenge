<% provide(:title, @resource_site.name) %>
<div class="container ">
  <%= link_to('Back to All Resource Sites', resource_sites_path, :class => 'btn btn-primary') %>
  <%= link_to('Edit this Resource Site', edit_resource_site_path(@resource_site), :class => 'btn btn-primary') %>
  <%= link_to('Delete this Resource Site', @resource_site, method: :delete,
                                  data: {confirm: 'Are you sure you want to delete this resource site?'}, :class => 'btn btn-primary') %>
  <legend class="text-warning"><%= @resource_site.name %></legend>
  <table class="table table-bordered table-responsive table-condensed">
    <tr>
      <td><strong>Address</strong></td>
      <td><span><%= @resource_site.address %></span></td>
    </tr>

    <tr>
      <td><strong>Description</strong></td>
      <td><span><%= @resource_site.description %></span></td>
    </tr>

    <tr>
      <td><strong>Eligibility:</strong></td>
      <td><span><%= Eligibility.find(@resource_site.eligibility_id).eligibility%></span></td>
    </tr>
  </table>
</div>
